/* Global Styles
================================================== */
a
  font-weight 500
  text-decoration none
  color $link-color
  &:hover
    color $link-hover-color

.mast-wrapper
  margin-bottom 30px
  background url(/assets/img/bg-mast-wrapper.jpg) top left repeat-x

.mast
  .brand
    width 165px
    height 198px
    display block
    // text-hide()
    background $brand-red
    border-radius 0
    box-shadow 4px 4px 10px rgba($brand-gray,.35)
  .nav
    > li
      > a
        &:hover,
        &:active
          background none
  .navbar-nav
    float none

.nav-secondary
  margin-top 45px
  margin-bottom 44px
  .navbar-nav
    > li
      &:before
        content '/'
        padding 0 15px
        font-weight 500
        font-size 18px
        color #fff
      > a
        padding 10px
        display inline-block
        font-weight 500
        font-size 18px
        letter-spacing 0.1em
        text-transform uppercase
        color #fff
        &:hover
          darken(#fff, 15%);
      &:first-child
          &:before
            content ''
            padding 0
  li.search
    &:before
      content ''
      padding 0
    input
      margin-top 3px
      padding 2px 10px
      width 298px
      font-weight 200
      font-size 18px
      border 1px solid $brand-gray

.nav-primary
  .navbar-nav
    > li
      margin-right 10px
      > a
        font 500 24px $font-family-serif
        letter-spacing 0.1em
        text-transform uppercase
        color $brand-red
        .caret
          margin-top: -5px;
          margin-left: 10px;
          border-top: 6px solid;
          border-right: 6px solid transparent;
          border-left: 6px solid transparent;





