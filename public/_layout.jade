!!!
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{ iste_title }
    link(rel="stylesheet", href="#{ site_url }/assets/css/app.css")
    link(rel="alternate", type="application/rss+xml", title="#{ site_title } RSS", href="/rss.xml")
  body(class="page-#{ current.path[0] } #{ current.path.join('-') }")
    .container
      .row
        .col-sm-4
          h1 Fifth Letter
        .col-sm-8
          ul.nav.nav-pills.pull-right
            li
              a(href="#{ site_url }/") Home
            li
              a(href="#{ site_url }/portfolio") Portfolio

    != yield

    footer
      .container
        .row
          .col-sm-6
            p: small &copy; 2013 #{ site_title }
          .col-sm-6
            p.pull-right
              small: a(href="/rss.xml", title="#{ site_title } RSS feed") RSS feed

    script(src="#{ site_url }/assets/js/bootstrap.min.js")
    script(src="#{ site_url }/assets/js/app.js")
